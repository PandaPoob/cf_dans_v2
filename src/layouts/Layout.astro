---
import "../styles/global.css";
import "@fontsource/open-sans";
import "@fontsource-variable/roboto";
import "@fontsource/encode-sans-condensed";
import { Image } from "astro:assets";
const { title, description, keywords, location } = Astro.props;
import MobileMenu from "./MobileMenu";
import Logo from "../../public/favicon.svg";
import Facebook from "~/assets/icons/facebook.svg";
import Instagram from "~/assets/icons/instagram.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title : "CF Dans"}</title>
    {description && <meta name="description" content={description} />}
    {keywords && <meta name="keywords" content={keywords} />}
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="text-secondary font-body">
    <header class="relative bg-primary shadow p-3">
      <nav class="w-full flex justify-between items-center">
        <a href="/" class="w-8"><Image src={Logo} alt="logo" /></a>
        <ul class="gap-12 py-2 items-center hidden md:flex font-alt">
          <li>
            <a
              href="/dans-og-tilmelding"
              class={`${location === "/dans-og-tilmelding" && "underline underline-offset-2"} `}
              >Dans & Tilmelding</a
            >
          </li>
          <li>
            <a
              href="/eventbooking"
              class={`${location === "/eventbooking" && "underline underline-offset-2"} `}
              >Event booking</a
            >
          </li>
          <li>
            <a
              href="/omcfdans"
              class={`${location === "/omcfdans" && "underline underline-offset-2"} `}
              >Om CF Dans</a
            >
          </li>
          <li>
            <a
              href="/kontakt"
              class={`${location === "/kontakt" && "underline underline-offset-2"} `}
              >Kontakt mig</a
            >
          </li>
        </ul>
        <MobileMenu client:load />
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="bg-primary py-8 px-4 md:flex md:justify-between">
      <a href="/" class="flex items-center gap-2">
        <span><Image width={64} src={Logo} alt="logo" /></span><span
          class="font-display text-accent text-2xl">CF DANS</span
        ></a
      >
      <div class="mt-10 flex gap-20 md:mt-0">
        <div>
          <h4 class="text-xl mb-3">Kontakt mig</h4>
          <p class="mb-1">+45 28 62 32 40</p>
          <a href="mailto:CFDANS0@gmail.com" target="_blank"
            >CFDANS0@gmail.com</a
          >
        </div>
        <div>
          <h4 class="text-xl mb-3">FÃ¸lg med</h4>
          <div class="flex gap-2">
            <a href="https://www.instagram.com/cf_dans/"><Instagram /></a>
            <a href="https://www.facebook.com/groups/808196330246330"
              ><Facebook /></a
            >
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
