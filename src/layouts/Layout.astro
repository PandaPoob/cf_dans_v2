---
import "../styles/global.css";
import "@fontsource/open-sans";
import "@fontsource-variable/roboto";
import "@fontsource/encode-sans-condensed";
import { Image } from "astro:assets";
const { title, description, keywords, location } = Astro.props;
import Navigation from "./Navigation";
import Logo from "../../public/favicon.svg";
import Facebook from "~/assets/icons/facebook.svg";
import Instagram from "~/assets/icons/instagram.svg";
import AOSInit from "~/components/shared/AOSInit";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title : "CF Dans"}</title>
    {description && <meta name="description" content={description} />}
    {keywords && <meta name="keywords" content={keywords} />}
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body class="text-secondary font-body overflow-x-hidden">
    <header class="relative">
      <Navigation location={location} client:load />
    </header>
    <main class="pt-[4.5rem]">
      <AOSInit client:load />
      <slot />
    </main>
    <footer class="bg-primary py-8 px-4 md:flex md:justify-between">
      <a href="/" class="flex items-center gap-2">
        <span><Image width={64} src={Logo} alt="logo" /></span><span
          class="font-display text-accent text-2xl">CF DANS</span
        ></a
      >
      <div class="mt-10 flex gap-20 md:mt-0">
        <div>
          <p class="text-xl mb-3">Kontakt mig</p>
          <p class="mb-1">+45 28 62 32 40</p>
          <a href="mailto:CFDANS0@gmail.com" target="_blank"
            >CFDANS0@gmail.com</a
          >
        </div>
        <div>
          <p class="text-xl mb-3">Følg med</p>
          <div class="flex gap-2">
            <a
              href="https://www.instagram.com/cf_dans/"
              aria-label="Se mere på CF Dans' Instagram"><Instagram /></a
            >
            <a
              href="https://www.facebook.com/groups/808196330246330"
              aria-label="Se mere på CF Dans' Facebook"><Facebook /></a
            >
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
