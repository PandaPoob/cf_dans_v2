---
import heroBg from "~/assets/splash_2.png";
---

<section class="relative h-screen">
  <img
    src={heroBg.src}
    alt="Slå dig løs"
    class="w-full h-screen object-cover object-[48%_10%] md:object-[45%_0%]"
  />
  <div
    class="absolute inset-0 flex justify-start mt-28 md:items-center md:mt-0"
  >
    <div class="flex flex-col items-center text-center ml-6 md:ml-50">
      <h2 class="font-display text-5xl text-white mb-8 md:mb-10 md:text-8xl">
        Slå dig løs
      </h2>
      <a
        class="bg-accent text-primary flex items-center justify-center rounded-xs w-auto py-2 px-6 text-sm font-alt font-medium transition-colors duration-200 md:px-10 md:text-lg hover:bg-accent-dark"
        href={"/dans-og-tilmelding"}
      >
        Dans nu
      </a>
    </div>
  </div>
</section>
